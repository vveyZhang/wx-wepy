<style lang="less" >
@import url('../../theme/index.less');
.article-title {
  font-size: @size-price;
  color: @color;
  line-height: 60rpx;
  margin-bottom: 12rpx;
}
.article-container {
  padding: 30rpx 30rpx;
}
.article-info {
  line-height: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
  font-size: @size-content;
  .origin {
    color: @color;
  }
  .time {
    color: @color-placeholder;
    margin-left: 20rpx;
  }
}
.img_class {
  width: 100%;
}
</style>
<template>
  <view class="article-container" >
  <view class="article-content" >
      <rich-text nodes="{{content}}"></rich-text>
  </view>
  </view>
</template>

<script>
import wepy from 'wepy';
import { connect } from 'wepy-redux';
import { formatTime } from '../../utils/format.js';
@connect({
  banners(state) {
    return state.global.banners;
  }
})
export default class BannerDetail extends wepy.page {
  config = {
    navigationBarTitleText: '活动详情'
  };
  data = {
    article: {}
  };
  computed = {
    time() {
      if (!this.article || !this.article.created_at) return '';
      return formatTime(this.article.created_at);
    },
    content() {
      if (!this.article || !this.article.content) return '';
      return this.article.content.replace(/<img/g, `<img class='img_class'`);
    }
  };
  onLoad(option) {
    for (let item of this.banners) {
      if (item.id == option.id) this.article = item;
    }
  }
}
</script>